{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "3.0.1",
  "version_name": "3.0.1 - Standalone Edition (CSP Fixed)",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "minimum_chrome_version": "116",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel",
    "downloads",
    "scripting",
    "tabs",
    "desktopCapture"
  ],
  "commands": {
    "capture-full-page": {
      "suggested_key": {
        "default": "Alt+Shift+P",
        "mac": "Alt+Shift+P"
      },
      "description": "Capture full page screenshot"
    },
    "capture-visible": {
      "suggested_key": {
        "default": "Alt+Shift+V",
        "mac": "Alt+Shift+V"
      },
      "description": "Capture visible area"
    },
    "toggle-recording": {
      "suggested_key": {
        "default": "Alt+Shift+R",
        "mac": "Alt+Shift+R"
      },
      "description": "Start/Stop recording"
    },
    "open-editor": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Open editor"
    }
  },
  "action": {
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "options_page": "src/options/options.html",
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "src/sidepanel/sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://gemini.google.com/*",
        "https://www.deepseek.com/*",
        "https://deepseek.com/*",
        "https://chat.deepseek.com/*",
        "https://copilot.microsoft.com/*",
        "https://www.bing.com/chat*",
        "https://perplexity.ai/*",
        "https://www.perplexity.ai/*",
        "https://claude.ai/*",
        "https://x.ai/*",
        "https://www.x.ai/*"
      ],
      "js": ["src/content/ai-chat-exporter.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/editor/editor.html",
        "src/editor/editor-standalone.html",
        "src/content/page-click-listener.js",
        "src/exporter/chat-exporter.html",
        "src/privacy/privacy.html",
        "src/privacy/privacy-en.html",
        "src/privacy/terms.html",
        "src/privacy/terms-en.html",
        "src/vendor/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net https://cdnjs.cloudflare.com https://uicdn.toast.com https://cdn.quilljs.com; font-src 'self' data: https://fonts.gstatic.com https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; img-src 'self' data: blob: https:;"
  }
}
